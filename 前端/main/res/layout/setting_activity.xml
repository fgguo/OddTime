<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#9fa0a0">

        <Button
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/back_button"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/back_button"
            android:layout_toRightOf="@+id/back_button"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="23sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:padding="1px"
        android:background="@drawable/bg_layout_shape">

        <View style="@style/bg_line" />
        <LinearLayout
            android:id="@+id/xiaoxitongzhi"
            style="@style/mid_layout">

        <ImageView
            style="@style/img_smallicon"
            android:src="@drawable/ic_notifications_black_24dp" />

        <TextView
            style="@style/usertext"
            android:text="  消息通知" />

        <ImageView style="@style/img_arrow" />
    </LinearLayout>
        <View style="@style/bg_line" />
        <LinearLayout
            android:id="@+id/neicunqingli"
            style="@style/mid_layout">

            <ImageView
                style="@style/img_smallicon"
                android:src="@drawable/neicunqingli_image" />

            <TextView
                style="@style/usertext"
                android:text="  内存清理" />
           <TextView
               android:id="@+id/crashtext"
               android:layout_width="80sp"
               android:layout_height="wrap_content"
               android:layout_marginEnd="10sp"/>
            <ImageView style="@style/img_arrow" />
        </LinearLayout>
        <View style="@style/bg_line" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:padding="1px"
        android:background="@drawable/bg_layout_shape">
        <LinearLayout
            android:id="@+id/banbengengxin"
            style="@style/mid_layout">

            <ImageView
                style="@style/img_smallicon"
                android:src="@drawable/ic_sync_black_24dp" />

            <TextView
                style="@style/usertext"
                android:text="  版本更新" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
        <View style="@style/bg_line" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="1px"
        android:background="@color/base_tab_indicator_text_color">

            <TextView
                style="@style/usertext"
                android:textSize="35sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:text="退出登录" />

            <ImageView style="@style/img_arrow" />

        <View style="@style/bg_line" />

    </LinearLayout>
</LinearLayout>