
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/auth_background">
<Button
    android:id="@+id/search_botton"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:text="找专人作专事"
    android:textAllCaps="true"
    android:layout_marginBottom="10dp"
    />

    <LinearLayout
        android:id="@+id/botton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="修家电"
            android:layout_marginRight="8dp"
            android:background="@drawable/green_color"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="131dp"
            android:layout_height="40dp"
            android:text="办理手续"
            android:layout_marginRight="8dp"
            android:background="@drawable/purple_color"
             />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Logo设计"
            android:background="@drawable/red_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <!--weightSum??-->
        <Button
            android:id="@+id/button5"
            android:layout_width="83dp"
            android:layout_height="40dp"
            android:layout_weight="0.20"
            android:text="课程补习"
            android:layout_marginRight="10sp"
            android:background="@drawable/yello_color"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="53dp"
            android:layout_height="40dp"
            android:layout_weight="0.23"
            android:text="作业辅导"
            android:background="@drawable/blue_color"/>

    </LinearLayout>

</LinearLayout>
